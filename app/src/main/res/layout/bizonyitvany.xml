<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical">


    <ViewFlipper
        android:id="@+id/viewflipp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/images"
            android:layout_width="match_parent"
            android:layout_height="523dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/webprog" />

        <ImageView
            android:id="@+id/images01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/schol" />

        <ImageView
            android:id="@+id/images02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/gazdinfor" />

        <ImageView
            android:id="@+id/images03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/erettseg" />

        <ImageView
            android:id="@+id/images04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/eretsegi" />

        <ImageView
            android:id="@+id/images05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/nemet" />

        <ImageView
            android:id="@+id/images06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/telc" />

        <ImageView
            android:id="@+id/images07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/szamitas" />

        <ImageView
            android:id="@+id/images08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/szamitastech" />

        <ImageView
            android:id="@+id/images09"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/ecdlkicsi" />

        <ImageView
            android:id="@+id/images10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/vas" />

        <ImageView
            android:id="@+id/images11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/muszaki" />
    </ViewFlipper>

    <ImageButton
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="18dp"
        android:layout_toEndOf="@+id/pervius"
        android:background="@android:drawable/screen_background_light_transparent"
        android:contentDescription="@string/todo"
        android:padding="10dp"
        app:srcCompat="@android:drawable/ic_media_next" />

    <ImageButton
        android:id="@+id/pervius"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:contentDescription="@string/todo"
        android:padding="10dp"
        app:srcCompat="@android:drawable/ic_media_previous" />


</RelativeLayout>